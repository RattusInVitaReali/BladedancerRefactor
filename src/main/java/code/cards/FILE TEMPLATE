    private static final int COST = ${COST};
    #if (${DAMAGE.equals("")}) #else    private static final int DAMAGE = ${DAMAGE}; #end
    #if (${UPGRADE_DAMAGE.equals("")}) #else    private static final int UPGRADE_DAMAGE = ${UPGRADE_DAMAGE}; #end
