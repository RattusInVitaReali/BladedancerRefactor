    public void onUpgrade() {
        #if (${UPGRADE_DAMAGE} != "")    upgradeDamage(UPGRADE_DAMAGE);
        #end#if (${UPGRADE_BLOCK} != "")    upgradeBlock(UPGRADE_BLOCK);
